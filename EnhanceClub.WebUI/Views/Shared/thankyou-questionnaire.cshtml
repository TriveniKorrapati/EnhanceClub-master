@using EnhanceClub.WebUI.Infrastructure.Utility
@section PageScripts
{
    <script type="text/javascript">
        $(document).ready(function () {

            localStorage.clear();

        });



    </script>

}

<div class="dashboard-page order-page order-confirmation-page thank-you-page">
    <div class="section top-section">
        <div class="container">
            <div class="row">

                <!-- Start of Main Section -->
                <div class="col-12 col-md-12 col-lg-12">

                    <!-- Start of Filter Section -->
                    <div class="row mt-4">
                        <div class="col-12 col-md-7 col-xl-6 text-md-left">
                            <h4 class="white mb-4">Thank you for answering our questionnaire</h4>
                            @if (SiteConfigurationsWc.IsBPKnownLogic == 0)
                            {
                                <p>
                                    Our @SiteConfigurationsWc.TermForPractitioner is reviewing your answers.
                                    They will let you know ASAP if everything is good to go or if we need a bit more information before confirming your ordering eligibility.
                                </p>
                            }
                            else
                            {
                                if (ViewBag.BPNotKnowStatus == "false")
                                {
                                    <p>
                                        Our @SiteConfigurationsWc.TermForPractitioner is reviewing your answers.
                                        They will let you know ASAP if everything is good to go or if we need a bit more information before confirming your ordering eligibility.
                                    </p>
                                }
                                else if (ViewBag.BPNotKnowStatus == "true")
                                {
                                    <h4>Check your blood pressure</h4>
                                    <p>
                                        In order to prescribe your medication, we need a recent blood pressure reading.
                                        At your earliest convenience, please obtain a reading and enter the information in your questionnaire so that we can proceed with processing your order. Check your email for details.
                                        See you shortly.
                                    </p>
                                }
                            }

                            <a href="@Url.Action("dashboard","customer")">&#8592; Go To Dashboard</a>
                        </div>

                    </div>

                </div>
                <!-- End of Main Section -->
            </div>
        </div>
    </div>
</div>