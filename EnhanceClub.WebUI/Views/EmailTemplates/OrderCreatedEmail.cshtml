@using EnhanceClub.WebUI.Infrastructure.Utility
@using EnhanceClub.WebUI.HtmlHelpers
@model EnhanceClub.Domain.Entities.OrderDetail

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Enhance Club - Invoice</title>
    <link rel="stylesheet" href="@SiteConfigurationsWc.CdnUrl/content/css/email-template.css">
    <link href="https://fonts.googleapis.com/css2?family=Kumbh+Sans:wght@400;700&display=swap" rel="stylesheet">
</head>

<body>
    <!-- Hero -->
    <table class="table" border="0" cellpading="0" cellspacing="0" bgcolor="#FBA303" width="100%">
        <tr>
            <td>
                <table width="700" border="0" cellpadding="0" cellspacing="0" align="center" style="border-collapse:collapse;">
                    <tr>
                        <td>
                            <img style="display:block;" width="100%" src="@SiteConfigurationsWc.CdnUrl/content/images/email-hero-order.png" alt="Welcome to Enhance Club">
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
    <!-- Sub heading -->
    <table class="table" border="0" cellpading="0" cellspacing="0" bgcolor="#FFFFFF" width="100%">
        <tr>
            <td>
                <table width="700" border="0" cellpadding="0" cellspacing="0" align="center" valign="middle" style="border-collapse:collapse;">
                    <tr style="vertical-align: middle;">
                        <td width="50%" style="font-family:'Kumbh Sans',arial,sans-serif;font-weight:700;font-size:32px">
                            &nbsp;<br>
                            <span style="font-family:'Kumbh Sans',arial,sans-serif;font-size:22px;font-weight:400;">Hi @Model.CustomerFirstName,</span><br>
                            Make sure what's coming is right.<br><br>
                        </td>
                        <td width="50%" align="center" style="font-family:'Kumbh Sans',arial,sans-serif;font-size:22px;font-weight:700;color:#FFFFFF;">
                            <a style="text-decoration:none;line-height:normal;color:#ffffff;" href="@SiteConfigurationsWc.CdnUrl/dashboard">
                                <img src="@SiteConfigurationsWc.CdnUrl/content/images/email-btn-view.png" alt="View Order">
                            </a>
                        </td>

                    </tr>
                </table>
            </td>
        </tr>
    </table>
    <!-- Main -->
    <table class="table" border="0" cellpading="0" cellspacing="0" bgcolor="#FFFFFF" width="100%">
        <tr>
            <td>
                <table width="700" border="0" cellpadding="0" cellspacing="0" align="center" valign="middle" style="border-collapse:collapse;">
                    <tr>
                        <td colspan="2" style="font-family:'Kumbh Sans',arial,sans-serif;font-weight:400;font-size:22px;color:#7c7c7c;">
                            &nbsp;<br>
                            Good times are coming your way. To ensure our performance matches yours, <b>double-check your order.</b> Get in touch if something
                            isn't right, email us and we'll get you sorted.
                            <br><br>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>

    <!-- Order Summary -->
    @*<table class="table" border="0" cellpading="0" cellspacing="0" bgcolor="#F2F2F2" width="100%">
            <tr>
                <td>

                    <table class="table" border="0" cellpading="0" cellspacing="0" bgcolor="#F2F2F2" width="100%">
                        <tr>
                            <td>
                                <table width="700" border="0" cellpadding="0" cellspacing="0" align="center" valign="middle" style="border-collapse:collapse;margin-top:20px;margin-bottom:20px;">
                                    <tr>
                                        <td style="font-family:'Kumbh Sans',arial,sans-serif;font-weight:400;font-size:22px;color:#000000;font-weight:700;">
                                            Order Summary<br><br>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="font-family:'Kumbh Sans',arial,sans-serif;font-weight:400;font-size:22px;color:#ffa400;font-weight:700;">
                                            Order #@Model.OrderInvoiceId<br><br>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="font-family:'Kumbh Sans',arial,sans-serif;font-weight:400;font-size:22px;color:#000000;font-weight:700;">
                                            Item<br><br>
                                        </td>
                                        <td align="center" style="font-family:'Kumbh Sans',arial,sans-serif;font-weight:400;font-size:22px;color:#000000;font-weight:700;text-align:center">
                                            Qty<br><br>
                                        </td>
                                        <td align="right" width="130" style="font-family:'Kumbh Sans',arial,sans-serif;font-weight:400;font-size:22px;color:#000000;font-weight:700;text-align:right;">
                                            Price<br><br>
                                        </td>
                                    </tr>
                                    @foreach (var cartDetail in Model.OrderCart)
                                    {
                                        <tr>
                                            <td style="font-family:'Kumbh Sans',arial,sans-serif;font-weight:400;font-size:22px;color:#7c7c7c;font-weight:400;">
                                                @cartDetail.ProductName @cartDetail.ProductSizeStrength @cartDetail.ProductSizeQuantity.ToString("0.##") @cartDetail.ProductUnitNamePk <br><br><br>
                                            </td>
                                            <td align="center" style="font-family:'Kumbh Sans',arial,sans-serif;font-weight:400;font-size:22px;color:#7c7c7c;font-weight:400;text-align:center;">
                                                @cartDetail.CartItemQuantity<br><br><br>
                                            </td>
                                            <td align="right" width="130" style="font-family:'Kumbh Sans',arial,sans-serif;font-weight:400;font-size:22px;color:#7c7c7c;font-weight:400;text-align:right;">
                                                @cartDetail.CartLineTotal.ToString("c") <br><br><br>
                                            </td>
                                        </tr>
                                    }
                                    <tr>
                                        <td colspan="2" align="right" style="font-family:'Kumbh Sans',arial,sans-serif;font-weight:400;font-size:22px;color:#7c7c7c;font-weight:400;text-align:right;">
                                            Subtotal (@Model.OrderCart.Count Items)<br><br>
                                        </td>
                                        <td align="right" width="130" style="font-family:'Kumbh Sans',arial,sans-serif;font-weight:400;font-size:22px;color:#7c7c7c;font-weight:400;text-align:right;">
                                            @Model.OrderCart.Sum(x => x.CartLineTotal).ToString("c")<br><br>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2" align="right" style="font-family:'Kumbh Sans',arial,sans-serif;font-weight:400;font-size:22px;color:#7c7c7c;font-weight:400;text-align:right;">
                                            Shipping<br><br>
                                        </td>
                                        <td align="right" width="130" style="font-family:'Kumbh Sans',arial,sans-serif;font-weight:700;font-size:22px;color:#7c7c7c;font-weight:400;text-align:right;">
                                            Free <br><br>
                                        </td>
                                    </tr>
                                    @if (Model.OrderInvoiceCreditAmount > 0)
                                    {
                                        <tr>
                                            <td colspan="2" align="right" style="font-family:'Kumbh Sans',arial,sans-serif;font-weight:400;font-size:22px;color:#7c7c7c;font-weight:400;text-align:right;">
                                                <p>Credits Applied</p>
                                            </td>
                                            <td align="right" width="130" style="font-family:'Kumbh Sans',arial,sans-serif;font-weight:400;font-size:22px;color:#ffa400;font-weight:400;text-align:right;">
                                                <p>@Model.OrderInvoiceCreditAmount.ToString("c")</p>
                                            </td>
                                        </tr>
                                    }
                                    @if (Model.OrderInvoiceCouponAmount > 0)
                                    {
                                        <tr>
                                            <td colspan="2" align="right" style="font-family:'Kumbh Sans',arial,sans-serif;font-weight:400;font-size:22px;color:#7c7c7c;font-weight:400;text-align:right;">
                                                <p>Coupon Discount</p>
                                            </td>
                                            <td align="right" width="130" style="font-family:'Kumbh Sans',arial,sans-serif;font-weight:400;font-size:22px;color:#ffa400;font-weight:400;text-align:right;">
                                                <p>@Model.OrderInvoiceCouponAmount.ToString("c")</p>
                                            </td>
                                        </tr>
                                    }
                                    @if (SiteConfigurationsWc.EnableTax)
                                    {
                                        if (@Model.OrderInvoiceHarmonizedTaxAmount > 0)
                                        {
                                            <tr>
                                                <td colspan="2" align="right" style="font-family:'Kumbh Sans',arial,sans-serif;font-weight:400;font-size:22px;color:#7c7c7c;font-weight:400;text-align:right;">
                                                    <p> HST (@Model.OrderInvoiceHarmonizedTaxPercentage.ToString("0.00")%)</p>
                                                </td>
                                                <td align="right" width="130" style="font-family:'Kumbh Sans',arial,sans-serif;font-weight:400;font-size:22px;color:#7c7c7c;font-weight:400;text-align:right;">
                                                    <p> @Model.OrderInvoiceHarmonizedTaxAmount.ToString("c")</p>
                                                </td>
                                            </tr>

                                        }
                                        else
                                        {
                                            if (@Model.OrderInvoiceProvinceTaxAmount > 0)
                                            {
                                                <tr>
                                                    @if (@Model.OrderInvoiceBillingProvince.ToLower() == "quebec")
                                                    {
                                                        <td colspan="2" align="right" style="font-family:'Kumbh Sans',arial,sans-serif;font-weight:400;font-size:22px;color:#7c7c7c;font-weight:400;text-align:right;">
                                                            <p>QST (@Model.OrderInvoiceProvincialTaxPercentage.ToString("0.000")%) <p />
                                                        </td>
                                                    }
                                                    else
                                                    {
                                                        <td colspan="2" align="right" style="font-family:'Kumbh Sans',arial,sans-serif;font-weight:400;font-size:22px;color:#7c7c7c;font-weight:400;text-align:right;">
                                                            <p>PST (@Model.OrderInvoiceProvincialTaxPercentage.ToString("0.00")%): </p>
                                                        </td>
                                                    }
                                                    <td align="right" width="130" style="font-family:'Kumbh Sans',arial,sans-serif;font-weight:400;font-size:22px;color:#7c7c7c;font-weight:400;text-align:right;">
                                                        <p>@Model.OrderInvoiceProvinceTaxAmount.ToString("c") </p>
                                                    </td>
                                                </tr>
                                            }
                                            if (@Model.OrderInvoiceGlobalTaxAmount > 0)
                                            {
                                                <tr>
                                                    <td colspan="2" align="right" style="font-family:'Kumbh Sans',arial,sans-serif;font-weight:400;font-size:22px;color:#7c7c7c;font-weight:400;text-align:right;">
                                                        <p>GST (@Model.OrderInvoiceGlobalTaxPercentage.ToString("0.00")%)</p>
                                                    </td>
                                                    <td align="right" width="130" style="font-family:'Kumbh Sans',arial,sans-serif;font-weight:400;font-size:22px;color:#7c7c7c;font-weight:400;text-align:right;">
                                                        <p> @Model.OrderInvoiceGlobalTaxAmount.ToString("c") </p>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    }
                                    <tr>
                                        <td colspan="2" align="right" style="font-family:'Kumbh Sans',arial,sans-serif;font-weight:400;font-size:22px;color:#000000;font-weight:700;text-align:right;">
                                            Total<br><br>
                                        </td>
                                        <td align="right" width="130" style="font-family:'Kumbh Sans',arial,sans-serif;font-weight:400;font-size:22px;color:#ffa400;font-weight:700;text-align:right;">
                                            @Model.OrderTotal.ToString("c")<br><br>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>*@
    <!-- Sub heading -->
    <table class="table" border="0" cellpading="0" cellspacing="0" bgcolor="#FFFFFF" width="100%">
        <tr>
            <td>
                <table width="700" border="0" cellpadding="0" cellspacing="0" align="center" valign="middle" style="border-collapse:collapse;margin-top:20px;margin-bottom:20px;">
                    <tr>
                        <td style="font-family:'Kumbh Sans',arial,sans-serif;font-weight:400;font-size:22px;color:#ffa400;font-weight:700;">
                            <span style="color:#000000;font-weight:400;"> Order Id: </span>@Model.OrderInvoiceId
                        </td>
                    </tr>
                    <tr>
                        <td width="50%" style="font-family:'Kumbh Sans',arial,sans-serif;font-size:22px;font-weight:400;color:#7c7c7c;">
                            &nbsp;<br>
                            <span style="color:#000000;font-weight:700;">Shipping Address</span><br><br>
                            <b style="color:#000000">@Model.CustomerFirstName @Model.CustomerLastName</b><br>
                            @Model.OrderInvoiceShippingAddress , <br>
                            @Model.OrderInvoiceShippingCity, @Model.OrderInvoiceShippingProvince, @Model.OrderInvoiceShippingCountry<br>
                            @Model.OrderInvoiceShippingZipCode<br><br>
                        </td>
                        <td width="50%" style="font-family:'Kumbh Sans',arial,sans-serif;font-size:22px;font-weight:400;color:#7c7c7c;">
                            &nbsp;<br>
                            <span style="color:#000000;font-weight:700;">Billing Address</span><br><br>
                            <b style="color:#000000">@Model.OrderInvoiceBillingFirstName @Model.OrderInvoiceBillingLastName</b><br>
                            @Model.OrderInvoiceBillingAddress,<br>
                            @Model.OrderInvoiceBillingCity ,@Model.OrderInvoiceBillingProvince, @Model.OrderInvoiceBillingCountry<br>
                            @Model.OrderInvoiceBillingZipCode<br><br>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" style="font-family:'Kumbh Sans',arial,sans-serif;font-size:22px;font-weight:400;color:#FFA400;">
                            &nbsp;<br>
                            <span style="color:#000000;font-weight:700;">Shipping Method</span><br><br>
                            <h2 style="margin: 0;">Free Shipping Included</h2>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
    <br>
    <!-- How To Order -->
    <table class="table" border="0" cellpading="0" cellspacing="0" bgcolor="#FBA303" width="100%">
        <tr>
            <td>
                <table width="700" border="0" cellpadding="0" cellspacing="0" align="center" valign="bottom" style="border-collapse:collapse;">
                    <tr style="vertical-align: bottom;" valign="bottom">
                        <td width="60%" style="font-family:'Kumbh Sans',arial,sans-serif;">
