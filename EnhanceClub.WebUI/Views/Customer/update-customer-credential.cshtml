@using EnhanceClub.WebUI.Infrastructure.Utility


<!-- Start of Main -->
<div class="dashboard-page order-page order-confirmation-page error-page">
    <!-- Start of the Top Clip Path -->
    <!-- <div class="top-clip">
        <div class="dash-top-clip">
        </div>
    </div> -->
    <!-- End of the Top Clip Path -->

    <div class="section top-section">
        <div class="container">
            <div class="row">

                <!-- Start of Main Section -->
                <div class="col-12 col-md-12 col-lg-12">

                    <!-- Start of Filter Section -->
                    <div class="row mt-4">
                        <div class="col-12 col-md-7 col-xl-6 text-center text-md-right">
                            <h4 class="white mb-4">Update Credentials</h4>
                            <p>
                                Add new email address
                            </p>
                            @using (Html.BeginForm("update-customer-credential", null, FormMethod.Post, new { @id = "updateCredentials", name = "updateCredentials" }))
                            {
                                if (!string.IsNullOrEmpty(@ViewBag.ErrorMessage))
                                {
                                    <h5>@ViewBag.ErrorMessage</h5>
                                }
                                <div class="form-group">
                                    @Html.TextBox("newEmail", null,
                                new
                                {
                                    @placeholder = "Type your new email",
                                    required = "required",
                                    @type = "email",
                                    @class = "form-control",
                                })
                                    @*<input class="form-control" type="text" placeholder="Type your email or username">*@
                                </div>
                                <button class="btn btn__secondary btn--rounded mb-3 ">Send</button><br>
                            }

                            <a href="@Url.Action("dashboard","customer")">&#8592; Go To Dashboard</a>
                        </div>

                    </div>
                    <!-- End of Filter Section -->

                </div>
                <!-- End of Main Section -->

            </div>
        </div>
    </div>


</div>
<!-- End of Main -->
