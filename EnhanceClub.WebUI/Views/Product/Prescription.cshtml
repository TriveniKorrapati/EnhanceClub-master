@using EnhanceClub.WebUI.Models
@using EnhanceClub.WebUI.Models
@model EnhanceClub.WebUI.Models.SearchLetterViewModel
<div class="content-container home-content">
    <div class="col-md-9">
        <div class="row">
            <div class="col-md-12">
                <h1>
                    Prescription Drugs
                </h1>
            </div>
        </div>

