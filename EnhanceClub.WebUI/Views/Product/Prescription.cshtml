        <div class="row">
            @*<div class="col-md-3 search-product">
                    <p>
                        Search for a product:
                    </p>
                </div>*@
            <div class="col-md-6">
                <div class="prescription-search">
                    @Html.Partial("ProductSearch", new SearchBarViewModel { SearchType = "rx", SearchBarLocation = "inner" })
                </div>
            </div>
        </div>

        @*---Alphabetic product search ---*@

        <div class="row">
            <div class="col-md-12">
