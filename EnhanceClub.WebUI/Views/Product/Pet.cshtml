@using EnhanceClub.WebUI.Models
@using EnhanceClub.WebUI.Models
@model EnhanceClub.WebUI.Models.SearchLetterViewModel

<div class="col-md-9 content-container">
    <h1>
        Pet Products
    </h1>

    @*---Search Box ---*@
    <div class="row">
        <div class="col-md-3 search-product">
            <p>
                Search for a product:
            </p>
        </div>
        <div class="col-md-6">
            <div class="prescription-search">
                @Html.Partial("ProductSearch", new SearchBarViewModel { SearchType = "pet", SearchBarLocation = "inner" })
            </div>
        </div>
    </div>

    @*---Alphabetic product search ---*@

    <div class="container container-standard m-b">
        <div class="row">
            <div class="col-md-12">
                <p style="padding: 10px 0; margin-bottom: 0;">
                    Browse Product Alphabetically
                </p>
                <div class="letter-container">
                    @Html.Partial("AlphabetLinks")
                </div>
                <div class="alert alert-danger alert-thin hidden pull-right msg-box">
                    Sorry, No product available under this category.
                </div>
            </div>
        </div>
    </div>


